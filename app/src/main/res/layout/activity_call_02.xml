<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_layout1"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:background="@drawable/car_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:src="@drawable/s_vehicle" />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/maruti_suzuki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Wagon R (Petrol)"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/wagonR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/maruti_suzuki"
                        android:fontFamily="@font/gotham_book"
                        android:textColor="@color/offwhite"
                        android:paddingTop="8dp"
                        android:text="DL1AB3241"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wagonR"
                        android:textColor="@color/offwhite"
                        android:fontFamily="@font/gotham_book"
                        android:paddingTop="4dp"
                        android:text="Automatic"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/Relative1"
                android:layout_below="@id/linear_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faults"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginLeft="16dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_layout2"
                android:layout_below="@id/Relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/car_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mechanical Fault"
                    android:fontFamily="@font/gotham_medium1"
                    android:textColor="@color/yellow"
                    android:paddingTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="16dp"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingTop="8dp"
                        android:textSize="12sp"
                        android:paddingLeft="12dp"
                        android:text="Describe your problem.."
                        android:fontFamily="@font/gotham_medium1"
                        android:textColor="@color/offwhite"
                        android:background="@drawable/car_background"
                        android:gravity="start" />


                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/firstRelative2"
                android:layout_below="@id/linear_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Details"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginLeft="12dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_layout4"
                android:layout_below="@id/firstRelative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/car_background"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/re"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingLeft="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/black"
                        android:text="Name of the Customer"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="3"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/s_phone_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="9864531286"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="13sp"
                        android:textColor="@color/offwhite"
                        android:layout_weight="1.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10sp"
                        android:textColor="@color/offwhite"
                        android:text="Connect Customer >>"
                        android:gravity="center"
                        android:layout_weight="1"/>
                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>

    <!--</ScrollView>-->



</LinearLayout>
